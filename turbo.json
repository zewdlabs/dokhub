{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["env.*local"],
  "globalEnv": ["PORT", "NODE_ENV", "DATABASE_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:migrate:deploy": {},
    "db:migrate:dev": {},
    "db:push": {},
    "db:seed": {},
    "generate": {
      "dependsOn": ["^generate"]
    },
    "db:studio": {
      "dependsOn": ["^db:studio"]
    }
  }
}
