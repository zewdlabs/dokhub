enum SocialLinkType {
  TWITTER
  LINKEDIN
  GITHUB
  INSTAGRAM
  FACEBOOK
  YOUTUBE
  TIKTOK
  OTHER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

enum VerificationStatus {
  INCOMPLETE
  PENDING
  REVIEW
  VERIFIED
  REJECTED
}

enum SubscriptionType {
  PRO
  ENTERPRISE
}

enum PostStatus {
  DRAFT
  PUBLISHED
  SUSPENDED
}

enum Role {
  SUADMIN
  CREATOR
  ADMIN
  USER
}
